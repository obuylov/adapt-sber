<div class="sber-tabs__inner component__inner">
    {{> component this}}
    <div class="sber-tabs__widget component__widget clearfix">

        <div class="sber-tabs__content"{{#if _minHeight}} style="min-height: {{_minHeight}}"{{/if}}>
            <div class="sber-tabs__content-inner">

                {{#each _items}}
                    <div id="{{../_id}}-{{@index}}-tabpanel" role="tabpanel"
                         aria-labelledby="{{../_id}}-{{@index}}-tabtitle" data-index="{{_index}}"
                         class="sber-tabs__content-item item-{{@index}} {{#if _classes}} {{_classes}}{{/if}}">
                        <div class="sber-tabs__content-item-inner">
                            <div class="title-and-body">
                                {{#if title}}
                                    <div class="sber-tabs__content-item-title">
                                        <div class="sber-tabs__content-item-title-inner" {{a11y_attrs_heading
                                                'componentItem'}}>
                                            {{{title}}}
                                        </div>
                                    </div>
                                {{/if}}

                                {{#if body}}
                                    <div class="sber-tabs__content-item-body">
                                        <div class="sber-tabs__content-item-body-inner">
                                            {{{compile body}}}
                                        </div>
                                    </div>
                                {{/if}}
                            </div>
                            {{#if _graphic.src}}
                                <div class="sber-tabs__content-item-graphic">
                                    <img class="sber-tabs__content-item-graphic-inner" src="{{{_graphic.src}}}"
                                         {{#if _graphic.alt}}aria-label="{{_graphic.alt}}"
                                         {{else}}aria-hidden="true"{{/if}}/>
                                </div>
                            {{/if}}

                        </div>
                    </div>
                {{/each}}

            </div>
        </div>

        <div class="sber-tabs__nav">
            <div class="sber-tabs__nav-inner" role="tablist">

                {{#each _items}}
                    <button
                            role="tab"
                            aria-selected="false"
                            aria-controls="{{../_id}}-{{@index}}-tabpanel"
                            aria-label="{{{tabTitle}}}.{{#if
                                    _isVisited}} {{_globals._accessibility._ariaLabels.visited}}{{/if}}"
                            class="sber-tabs__nav-item-btn js-sber-tabs-nav-item-btn-click{{#if _isVisited}} is-visited{{/if}}"
                            data-index="{{_index}}">

                        <div id="{{../_id}}-{{@index}}-tabtitle" class="sber-tabs__nav-item-btn-inner">{{{tabTitle}}}</div>
                    </button>
                {{/each}}

            </div>
        </div>

    </div>
</div>
